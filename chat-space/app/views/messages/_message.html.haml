.main__container-content-body{data: {id: message.id}}
  .main__container-content-body-name
    .main__container-content-body-name--user
      = message.user.name
    .main__container-content-body-name--time
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

